{
    "global": {
        "path": "./",
        "ping_time": 5,
        "max_missed": 3,
        "use_ipv6": false,
        "bind_ip": "0.0.0.0",
        "bind_port": 62031,
        "logging": {
            "file": "logs/hblink.log",
            "console_level": "INFO",
            "file_level": "DEBUG",
            "retention_days": 30
        },
        "stats_interval": 60,
        "report_stats": true,
        "stream_timeout": 2.0,
        "stream_hang_time": 10.0
    },
    "global_alternate_example": {
        "comment": "Alternative configuration showing longer hang time for slower operators",
        "path": "./",
        "ping_time": 5,
        "max_missed": 3,
        "use_ipv6": false,
        "bind_ip": "0.0.0.0",
        "bind_port": 62031,
        "logging": {
            "file": "logs/hblink.log",
            "console_level": "INFO",
            "file_level": "DEBUG",
            "retention_days": 30
        },
        "stats_interval": 60,
        "report_stats": true,
        "stream_timeout": 2.0,
        "stream_hang_time": 20.0
    },
    "blacklist": {
        "patterns": [
            {
                "name": "Blocked IDs",
                "description": "Should never be used",
                "match": {
                    "ids": [1, 2]
                },
                "reason": "Repeated abuse of network"
            },
            {
                "name": "Blocked Range",
                "description": "Unauthorized network range",
                "match": {
                    "id_ranges": [[315000, 315999]]
                },
                "reason": "Unauthorized DMR-MARC range"
            },
            {
                "name": "Blocked Callsigns",
                "description": "Banned operators",
                "match": {
                    "callsigns": ["BADACTOR*", "SPAM*"]
                },
                "reason": "Network abuse"
            }
        ]
    },
    "repeater_configurations": {
        "patterns": [
            {
                "name": "KS-DMR Network",
                "description": "All repeaters in the KS-DMR network",
                "match": {
                    "id_ranges": [[312000, 312099]]
                },
                "config": {
                    "enabled": true,
                    "timeout": 30,
                    "passphrase": "ks-dmr-network-key",
                    "talkgroups": [3120, 3121, 3122],
                    "description": "KS-DMR Network Repeater"
                }
            },
            {
                "name": "WA0EDA Repeaters",
                "description": "All WA0EDA club repeaters",
                "match": {
                    "callsigns": ["WA0EDA*"]
                },
                "config": {
                    "enabled": true,
                    "timeout": 30,
                    "passphrase": "wa0eda-network-key",
                    "talkgroups": [31201, 31202],
                    "description": "WA0EDA Club Repeater"
                }
            },
            {
                "name": "Club Network",
                "description": "Multiple specific repeaters for a club network",
                "match": {
                    "ids": [312100, 312101, 312102]
                },
                "config": {
                    "enabled": true,
                    "timeout": 30,
                    "passphrase": "club-network-key",
                    "talkgroups": [3100, 3101, 3102],
                    "description": "Club Network Repeater"
                }
            }
        ],
        "default": {
            "enabled": true,
            "timeout": 30,
            "passphrase": "passw0rd",
            "talkgroups": [8],
            "description": "Default Repeater Configuration"
        }
    },
    "talkgroups": {
        "8": {
            "name": "Local",
            "bridge": false
        },
        "9": {
            "name": "Alternate KS-DMR",
            "bridge": true
        },
        "3120": {
            "name": "KS Statewide",
            "bridge": true
        },
        "3122": {
            "name": "KS-DMR Tech",
            "bridge": false
        },
        "31202": {
            "name": "WA0EDA Event",
            "bridge": false
        }
    }
}
